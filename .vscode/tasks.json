{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build active file using g++ with the dependencies at /src",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-g3",
				"-o",
				"${workspaceFolder}\\output\\app.exe",
				"${file}",
				"${workspaceFolder}\\src\\*.cpp",
				"-lmingw32", 
				"-lSDL2main", 
				"-lSDL2"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}